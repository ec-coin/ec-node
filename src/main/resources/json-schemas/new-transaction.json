{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "command",
    "number",
    "transaction"
  ],
  "properties": {
    "command": {
      "const": "new-transaction"
    },
    "number": {
      "type": "integer"
    },
    "transactions": {
      "type": "array",
      "additionalItems": true,
      "items": {
        "anyOf": [
          {
            "type": "object",
            "required": [
              "hash",
              "block_hash",
              "from",
              "to",
              "amount",
              "signature",
              "status",
              "address_type",
              "public_key",
              "timestamp"
            ],
            "properties": {
              "hash": {
                "type": "string"
              },
              "block_hash": {
                "type": "string"
              },
              "from": {
                "type": "string"
              },
              "to": {
                "type": "string"
              },
              "amount": {
                "type": "number"
              },
              "signature": {
                "type": "string"
              },
              "status": {
                "const": "pending"
              },
              "address_type": {
                "type": "string"
              },
              "public_key": {
                "type": "string"
              },
              "timestamp": {
                "type": "integer"
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "additionalProperties": false
}